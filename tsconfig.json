{
	"compilerOptions": {
		"target": "esnext",
		"module": "preserve",
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"moduleResolution": "bundler",
		"declaration": true,
		"outDir": "dist",
		"allowJs": true
	},
	"includes": ["src/**/*.ts", "eslint.config.js", "tsup.config.ts"]
}
